<div class="showinformation">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="showDetailsContainer">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <h1>ShowNet Registration</h1>
                            <hr style="margin-top:0px;">
                            <div id="showcontent">
                                <h4>New User Information</h4>
                                <p><font style="color:#ff0000;">PLEASE NOTE: ShowNet only allows 1 user access per login.</font></p>
                                @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                   //  @Html.EnableUnobtrusiveJavaScript()
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                   
                                <div class="registrationForm">
                                    <form>
                                        <div class="row">
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>Salutation:</label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                <select class="form-control" style="display:inline-block; width:auto;" id="Salutation" name="Salutation">
                                                    <option value="Mr">Mr</option>
                                                    <option value="Miss">Miss</option>
                                                    <option value="Mrs">Mrs</option>
                                                    <option value="Ms">Ms</option>
                                                    <option value="Dr">Dr</option>
                                                </select>
                                               
                                            </div>
                                            <div class="clr"></div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label class="marginBottomNone">First Name <font style="color:#ff0000">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="FirstName" name="FirstName" >*@
                                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m=>m.FirstName)
                                            </div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label class="marginBottomNone">Last Name <font style="color:#ff0000">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="LastName" name="LastName">*@
                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.LastName)
                                            </div>
                                            <div class="col-lg-12 col-sm-12 col-xs-12"><hr></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>Desired Username: <font style="color:#ff0000">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="UserName" name="UserName">*@
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.UserName)
                                            </div>
                                            <div class="clr"></div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>Password <font style="color:#ff0000">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="Password" name="Password">*@
                                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Password)
                                            </div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>Confirm Password <font style="color:#ff0000">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="ConfirmPassword" name="ConfirmPassword">*@
                                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                            </div>
                                            <div class="clr"></div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label class="marginBottomNone">Password Hint: <font style="color:#ff0000;">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<textarea class="form-control" id="PasswordHint" name="PasswordHint"></textarea>*@
                                                @Html.TextBoxFor(m => m.PasswordHint, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.PasswordHint)
                                            </div>
                                            <div class="col-lg-12 col-sm-12 col-xs-12"><hr></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>Email Address: <font style="color:#ff0000">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="Email" name="Email">*@
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Email)
                                            </div>
                                            <div class="clr"></div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label class="marginBottomNone">Phone Area Code:</label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="AreaCode" name="AreaCode">*@
                                                @Html.TextBoxFor(m => m.AreaCode, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.AreaCode)
                                            </div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label class="marginBottomNone">Phone</label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="Phone" name="Phone">*@
                                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Phone)
                                            </div>
                                            <div class="col-lg-12 col-sm-12 col-xs-12"><hr></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>Address 1 <font style="color:#ff0000;">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<textarea class="form-control" style="margin-bottom:15px;" id="Address1" name="Address1"></textarea>*@
                                                @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Address1)
                                            </div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>Address 2</label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<textarea class="form-control" style="margin-bottom:15px;" id="Address2" name="Address2"></textarea>*@
                                                @Html.TextBoxFor(m => m.Address2, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Address2)
                                            </div>
                                            <div class="clr"></div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>City <font style="color:#ff0000;">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="City" name="City">*@
                                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.City)
                                            </div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>State <font style="color:#ff0000;">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="State" name="State">*@
                                                @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.State)
                                            </div>
                                            <div class="clr"></div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label class="marginBottomNone">Zip <font style="color:#ff0000;">*</font></label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<input type="text" class="form-control" id="Zip" name="Zip">*@
                                                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Zip)
                                            </div>
                                            <div class="clr"></div>
                                            <div class="col-lg-12 col-sm-12 col-xs-12"><hr></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                                <p>Would you like us to default you to a prefered discipline when you login to ShowNet?</p>
                                            </div>
                                            <div class="col-lg-2 col-sm-3 col-xs-12">
                                                <label>I prefer to view:</label>
                                            </div>
                                            <div class="col-lg-4 col-sm-3 col-xs-12">
                                                @*<select class="form-control">
                                                    <option value="-1">Please select a discipline</option>
                                                    <option value="0">Jumpers</option>
                                                    <option value="1">Dressage</option>
                                                    <option value="2">Reining</option>
                                                </select>*@

                                                @Html.DropDownListFor(m => m.Mode, new[] {
                                                    new SelectListItem(){Text = "Please select a discipline" , Value="-1"},
                                                    new SelectListItem(){Text ="Jumpers" , Value = "0"},
                                                    new SelectListItem(){Text ="Dressage" , Value = "1"},
                                                    new SelectListItem(){Text ="Reining" , Value = "2"},
                                                }, new { @class = "form-control" })
                                                
                                            </div>
                                            <div class="clr"></div>
                                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                                <button id="btnRegister" class="loginbtn" style="padding-right:30px; padding-left:30px;"><i class="fa fa-caret-right" style="padding-right:5px; font-size:18px;"></i> Finish</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /contentPart -->



