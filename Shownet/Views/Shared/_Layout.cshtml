<!DOCTYPE html>
<html>
<head>
    @*<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShowNet</title>
    <link href="~/html/css/bootstrap.css" type="text/css" rel="stylesheet">
    <link href="~/html/css/style.css" type="text/css" rel="stylesheet">
    <link href="~/html/css/font-awesome.css" type="text/css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800italic,800" rel="stylesheet" type="text/css">

    <!-- jQuery library script -->
    <script src="~/html/js/jquery-1.11.3.min.js" type="text/javascript"></script>
    <script src="http://localhost:53334/html/js/owl.carousel.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            jQuery("#ShowCarousel").owlCarousel({
                itemsCustom: [
                    [0, 1],
                    [450, 1],
                    [600, 2],
                    [700, 3],
                    [1000, 3],
                    [1200, 4],
                    [1400, 5],
                    [1600, 5]
                ],
                //Autoplay
                autoPlay: false,
                stopOnHover: false,
                // Navigation
                navigation: true,
                navigationText: ["", ""],
                rewindNav: true,
                scrollPerPage: false
            });
        });
    </script>
    <!-- bootstrap script -->
    <script src="~/html/js/bootstrap.js" type="text/javascript"></script>
</head>
<body class="homepage">
    <!-- header -->
    @Html.Partial("_Header")
    <!-- /header -->
    <div class="homepage">
        @RenderBody()

    </div>
    <!-- footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="footerLinks">
                        <ul>
                            <li>
                                @*<a href="javascript:void(0);">Contact us</a>*@
                            @Html.ActionLink("Contact us", "ContactUs", "ShowNet")
                        </li>
                        <li><a href="javascript:void(0);">Terms of use</a></li>
                        <li><a href="javascript:void(0);">Privacy Policy</a></li>
                        <li>&copy; 2015. All right are reserved. </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- /footer -->

@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
