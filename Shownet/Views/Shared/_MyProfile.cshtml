@model ViewModel.MemberDetailsViewModel


<div role="tabpanel" class="tab-pane active" id="myProfile">
    <h3>Access and alter your contact information.</h3>
    <p>You can update your personal details for ShowNet here. If you change your email address here it will also affect the delivery of your notifications.</p>
    @using (Html.BeginForm("UpdateShowNet", "ShowNet", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        //  @Html.EnableUnobtrusiveJavaScript()
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="row">

            <div class="col-lg-6 col-sm-6 col-xs-12 innerPagesFormContent">
                <label for="Salutation">Salutation</label>
                @*<select class="form-control" id="Salutation">
                        <option></option>
                        <option selected="selected">Mr</option>
                        <option>Miss</option>
                        <option>Mrs</option>
                        <option>Ms</option>
                        <option>Dr</option>
                    </select>*@
                @Html.DropDownListFor(m => m.Salutation, new[] {
                        new SelectListItem(){Text = "Mr" , Value="Mr"},
                        new SelectListItem(){Text ="Miss" , Value = "Miss"},
                        new SelectListItem(){Text ="Mrs" , Value = "Mrs"},
                        new SelectListItem(){Text ="Ms" , Value = "Ms"},
                        new SelectListItem(){Text ="Dr" , Value = "Dr"},
                       }, new { @class = "form-control" })
                <div class="clr"></div>
                <label for="firstName">First Name <font style="color:#ff0000;">*</font></label>
                @*<input type="text" class="form-control" id="firstName">*@
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FirstName)
                <div class="clr"></div>
                <label for="lastName">Last Name <font style="color:#ff0000;">*</font></label>
                @*<input type="text" class="form-control" id="lastName">*@
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LastName)
                <div class="clr"></div>
                <label for="password">Password <font style="color:#ff0000;">*</font></label>
                @*<input type="text" class="form-control" id="password">*@
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
                <div class="clr"></div>
                <label for="confirmPassword">Confirm Password <font style="color:#ff0000;">*</font></label>
                @*<input type="text" class="form-control" id="confirmPassword">*@
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                <div class="clr"></div>
                <label for="passwordHint">Password Hint <font style="color:#ff0000;">*</font></label>
                @*<textarea class="form-control" id="passwordHint"></textarea>*@
                @Html.TextBoxFor(m => m.PasswordHint, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PasswordHint)
                <div class="clr"></div>
                <label for="emailAddress">Email Address <font style="color:#ff0000;">*</font></label>
                @*<input type="text" class="form-control" id="emailAddress">*@
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
                <div class="clr"></div>
                <label for="phoneAreaCode">Phone Area Code</label>
                @*<input type="text" class="form-control" id="phoneAreaCode">*@
                @Html.TextBoxFor(m => m.AreaCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AreaCode)
                <div class="clr"></div>
                <label for="phone">Phone <font style="color:#ff0000;">*</font></label>
                @*<textarea class="form-control" id="phone"></textarea>*@
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Phone)
                <div class="clr"></div>
            </div>
            <div class="col-lg-6 col-sm-6 col-xs-12 innerPagesFormContent">
                <label for="addressOne">Address 1</label>
                @*<input type="text" class="form-control" id="addressOne">*@
                @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address1)
                <div class="clr"></div>
                <label for="addressTwo">Address 2</label>
                @*<input type="text" class="form-control" id="addressTwo">*@
                @Html.TextBoxFor(m => m.Address2, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address2)
                <div class="clr"></div>
                <label for="city">city</label>
                @*<input type="text" class="form-control" id="city">*@
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.City)
                <div class="clr"></div>
                <label for="state">State</label>
                @*<input type="text" class="form-control" id="state">*@
                @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.State)
                <div class="clr"></div>
                <label for="zip">Zip</label>
                @*<input type="text" class="form-control" id="zip">*@
                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Zip)

                @Html.HiddenFor(m => m.UserName)
                @Html.HiddenFor(m => m.MemberID)
                <div class="clr"></div>
            </div>
            <div class="col-lg-12 col-sm-12 col-xs-12" style="padding-top:10px;">
                <button class="loginbtn"><i class="fa fa-floppy-o"></i> Update Details</button>
            </div>

        </div>
    }
</div>

